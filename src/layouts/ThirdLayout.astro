---
import BaseHead from "../components/BaseHead.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} />
  </head>
  <body
    class="min-h-screen grid grid-cols-3 bg-gradient-to-b from-fuchsia-950 to-gray-900"
  >
    <div
      class="bg-gradient-to-b from-fuchsia-950 to-gray-900 flex flex-col justify-center h-full"
    >
      <h1
        class="text-white font-semibold text-5xl text-right pr-4 tracking-tight"
      >
        Nicholas<br />Deschenes
      </h1>
    </div>
    <div
      class="overflow-y-scroll overflow-x-hidden h-screen flex flex-col justify-center pl-4 col-span-2 bg-white"
    >
      <slot />
    </div>
  </body>
</html>
